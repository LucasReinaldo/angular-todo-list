div.wrapper {
  display: flex;
  align-items: center;
  margin: 16px 0;
  max-width: 56rem;
  width: 100%;
  justify-content: space-between;
  background: #282c37;
  padding: 16px;
  border-radius: 8px;
  transition: transform 0.2s ease;

  &:hover {
    transform: translateY(-4px);
  }

  div.selector {
    flex: 1;
    display: flex;
    align-items: center;

    input[type=checkbox] {
      min-width: 20px;
      min-height: 20px;
      cursor: pointer;
      margin: 0 4px;
    }

    p {
      margin: 0 8px;
    }
  }

  div.button {
    display: flex;
    align-items: center;
    justify-content: center;
    background: tomato;
    border-radius: 50%;
    height: 24px;
    width: 24px;
    cursor: pointer;
    transition: all 0.2s ease;

    button {
      background: none;
      outline: none;
      border: none;
      color: white;
      cursor: pointer;
      margin: 0 8px;
    }

    &:hover {
      opacity: 0.8;
    }
  }
}



div.selector p.is-completed {
  text-decoration: line-through;
}
