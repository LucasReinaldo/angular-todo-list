div form {
  display: inline-flex;
  width: 100%;

  input[type='text'] {
    width: 80%;
    padding: 8px;
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
  }

  input[type='submit'] {
    width: 20%;
    background: #309197;
    color: whitesmoke;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    font-weight: 600;
    cursor: pointer;
  }
}

div form input {
  outline: none;
  border: none;
  font-size: 1.5rem;
}
